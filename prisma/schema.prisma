datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model EventsConfig {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  guildId String   @unique
  all     Boolean  @default(false)
  events  String[]
}

model ServerConfig {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  lang    String
  guildId String @unique
}
