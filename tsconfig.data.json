{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"skipLibCheck": true,
		"strict": false,

		/* Paths */
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
		 "@/*": ["./src"]
		}

		/* Others Configurations */
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["./src", "./src/languages/**/*.json"],
	"exclude": ["node_modules"]
}
