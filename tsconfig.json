{
	"compilerOptions": {
		"declaration": true,
		"allowJs": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./lib",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": false,
		"target": "esnext",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "./src",
		"paths": {
			"#lib": ["/lib/utils"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
